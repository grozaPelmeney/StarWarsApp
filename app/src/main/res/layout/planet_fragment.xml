<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.planet.PlanetFragment">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:id="@+id/planetLayout"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/planetNameTv"
                tools:text="name"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/diameterTv"
                tools:text="diameter"
                android:layout_alignParentStart="true"
                android:layout_below="@id/planetNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/populationTv"
                tools:text="population"
                android:layout_alignParentStart="true"
                android:layout_below="@id/diameterTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/climateTv"
                tools:text="climate"
                android:layout_alignParentStart="true"
                android:layout_below="@id/populationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/terrainTv"
                tools:text="terrain"
                android:layout_alignParentStart="true"
                android:layout_below="@id/climateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/gravityTv"
                tools:text="gravity"
                android:layout_alignParentStart="true"
                android:layout_below="@id/terrainTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/planetProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>