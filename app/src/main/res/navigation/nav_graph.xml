<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/filmsFragment">

    <fragment
        android:id="@+id/filmsFragment"
        android:name="com.example.starwarsapp.fragments.film.FilmsFragment"
        android:label="films_fragment"
        tools:layout="@layout/films_fragment" >
        <action
            android:id="@+id/action_filmsFragment_to_characterFragment"
            app:destination="@id/characterFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.starwarsapp.fragments.character.CharacterFragment"
        android:label="character_fragment"
        tools:layout="@layout/character_fragment" >
        <action
            android:id="@+id/action_characterFragment_to_filmsFragment"
            app:destination="@id/filmsFragment" />
    </fragment>
</navigation>